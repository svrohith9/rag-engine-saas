# RAG Engine SaaS Configuration
# Copy this file to .env and fill in your values

# ===================
# Server Configuration
# ===================
APP_HOST=0.0.0.0
APP_PORT=8000
UPLOAD_DIR=./data/uploads
DB_PATH=./data/rag.sqlite3
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000

# ===================
# LLM Provider Selection
# ===================
# Options: gemini, openai, anthropic, ollama
LLM_PROVIDER=gemini

# ===================
# Google Gemini (default)
# ===================
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
GEMINI_EMBED_MODEL=text-embedding-004

# ===================
# OpenAI (optional)
# ===================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# ===================
# Anthropic Claude (optional)
# ===================
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# ===================
# Ollama (local, optional)
# ===================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ===================
# Advanced Features
# ===================
# Enable streaming responses (Server-Sent Events)
ENABLE_STREAMING=true

# Enable cross-encoder reranking (requires sentence-transformers)
ENABLE_RERANKING=false
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# ===================
# Web Search (Perplexity-like)
# ===================
ENABLE_WEB_SEARCH=false
TAVILY_API_KEY=

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_RPM=60
